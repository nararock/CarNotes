@model IEnumerable<CarNotes.CnDb.RefuelEvent>
@using CarNotes.Classes;

<div>
    <table>
        <caption class="nameTable" style="background-color:@Html.Raw(new LinkMenuHelper().getColor(ViewBag.Name))">@ViewBag.Name</caption>
        <tr>
            <th>Дата</th>
            <th>Пробег</th>
            <th>Тип топлива</th>
            <th>АЗС</th>
            <th>Объем</th>
            <th>Цена(1 литр)</th>
            <th>Полный бак</th>
            <th>Забыл внести предыдущую заправку</th>
        </tr>
        @foreach (CarNotes.CnDb.RefuelEvent b in Model)
        {
            <tr>
                <td>@b.Date</td>
                <td>@b.Mileage</td>
                <td>@b.Fuel</td>
                <td>@b.Station</td>
                <td>@b.Volume</td>
                <td>@b.PricePerOneLiter</td>
                <td>@b.FullTank</td>
                <td>@b.ForgotRecordPreviousGasStation</td>
            </tr>
        }

    </table>
</div>
