@model CarNotes.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Styles/semantic.min.css" />
    <script src="@Url.Content("~/Content/cookie.min.js")"></script>
    <style>
        body {
            background-color: white;
        }

            body > .grid {
                height: 100%;
            }

        .image {
            margin-top: -100px;
            margin-bottom: 9px;
        }

        .column {
            max-width: 450px;
        }

        .ui.fluid.large.teal.submit.button {
            background-color: #91c37c;
        }
    </style>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h3 class="ui teal image header">
                <img src="~/Content/logo_small.png" class="image" />                
                    Записки Автомобилиста                
            </h3>
            @if (ViewBag.Message != null)
            {
                <div class="ui olive message">@ViewBag.Message</div>
            }
            <form class="ui large form" method="post" action="~/Login/Index">
                @Html.ValidationSummary(true)
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="Login" placeholder="Почта">
                        </div>
                        @Html.ValidationMessageFor(model => model.Login)
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="Password" placeholder="Пароль">
                        </div>
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <button class="ui fluid large teal submit button" type="submit">Войти</button>
                    <div class="ui error message"></div>
                </div>
            </form>
            <div class="ui message">
                Нет аккаунта? <a href="@Url.Content("~/Registration/Index")">Регистрация</a>
            </div>
        </div>
    </div>

