@using CarNotes.Classes;
@using CarNotes.Models;
@using Microsoft.AspNet.Identity;
@{
    var userHelper = new AuthHelper(Context);
    var isVerified = userHelper.AuthenticationManager.User.Identity.IsAuthenticated;
    var userName = userHelper.GetName(userHelper.AuthenticationManager.User.Identity.GetUserId());
    var vehicles = new VehicleHelper().GetVehicles(Context);
    List<LinkMenuModel> menu = new LinkMenuHelper().get(ViewBag.Name);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>_BasicTemplateNew</title>
    <link rel="stylesheet" href="~/Styles/semantic.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/semantic.min.js"></script>
    <script src="@Url.Content("~/Content/cookie.min.js")"></script>
    <script src="@Url.Content("~/Content/Main.js")"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    @RenderSection("styles", false)
    <style>

        /*стили для header (верхней части)*/
        .container {
            max-width: 1200px;
            height: 100px;
            margin: 0 auto;
            display: flex;
            flex-flow: row nowrap;
            justify-content: flex-start;
            align-items: center;
        }

        .imageBlock {
            width: 200px;
            height: 100px;
            display: inline-block;
        }

        .image {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .navigation {
            flex-grow: 1;
        }

            .navigation ul {
                display: flex;
                justify-content: center;
                flex-flow: row nowrap;
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .navigation li {
                margin-right: 30px;
            }

                .navigation li:last-child {
                    margin-right: 0;
                }

            .navigation a {
                padding: 8px 10px;
            }

            .navigation:hover a {
            }

        .userInfo {
            flex-direction: column;
            width: 200px;
            height: 100px;
            padding-right: 0;
        }

        .exit:hover::after {
            content: attr(data-title);
        }

        /*стили для content (для средней части, контента)*/
        .content {
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 40px;
        }

        @@media screen and (min-width: 500px) {
            .visibleOnPC {
                display: block;
            }

            .visibleOnMobile {
                display: none;
            }
        }

        @@media screen and (max-width: 499px) {
            .visibleOnPC {
                display: none;
            }

            .visibleOnMobile {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="header visibleOnPC">
        <div class="container">
            <div class="imageBlock"><img src="~/Content/logoCarNotes1.jpg" class="image" /></div><nav class="navigation">
                <ul>
                    @foreach (CarNotes.Models.LinkMenuModel l in menu)
                    {
                        <li><a href="@Url.Content(l.MethodLink)" class="link large ui @l.Color tertiary button">@l.NameLink</a></li>
                    }
                </ul>
            </nav><div class="userInfo">
                @if (!isVerified)
                {
                    <p class="topLetters"><a href="@Url.Content("~/Registration/Index")">Зарегистрироваться</a></p>
                    <p class="topLetters"><a href="@Url.Content("~/Login/Index")">Вход</a></p>
                }
                else
                {
                    <p class="userName"><i class="user circle outline icon"></i>@userName <a href="@Url.Content("~/Login/LogOut")" class="exit" data-title="Выйти"><i class="sign in alternate icon"></i></a></p>
                    @*<p class="exit" data-title="Выйти"></p>*@

                    <p>
                        @if (vehicles.Count >= 1)
                        {
                            if (vehicles.Count == 1)
                            {
                                <span id="spanVehicle" data-value="@vehicles[0].Id"><i class="car side icon"></i><strong>@vehicles[0].Brand @vehicles[0].Model @vehicles[0].ReleaseYear</strong></span>
                            }
                            else
                            {
                                <span>
                                    <div class="ui inline dropdown " id="vehicleSelect" size="1">
                                        <div class="text">
                                            <i class="car side icon"></i>
                                            @vehicles[0].Brand @vehicles[0].Model @vehicles[0].ReleaseYear
                                        </div>
                                        <i class="dropdown icon"></i>
                                        <div class="menu">
                                            @foreach (var element in vehicles)
                                            {
                                                <div class="item" data-value="@element.Id" onclick="changeData(@element.Id)">
                                                    <i class="car side icon"></i>
                                                    @element.Brand @element.Model @element.ReleaseYear
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </span>
                            }
                        }
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="visibleOnMobile">
        <div class="ui text menu">
            <div class="item">
                <img class="ui small image" src="~/Content/logoCarNotes1.jpg" />
            </div>
            <div class="ui right dropdown icon item">
                <i class="th large icon"></i>
                @*Меню<i class="dropdown icon"></i>*@
                <div class="menu">
                    @foreach (CarNotes.Models.LinkMenuModel l in menu)
                    {
                        <div class="item"><a href="@Url.Content(l.MethodLink)" @*class="link small ui tertiary button"*@>@l.NameLink</a></div>
                    }
                    <div class="divider"></div>
                    <div class="item"><i class="user circle outline icon"></i>@userName</div>
                    @if (vehicles.Count > 0)
                    {
                        <div class="ui inline dropdown item" id="vehicleSelect" size="1">
                            <i class="dropdown icon"></i><div class="text">
                                @vehicles[0].Brand @vehicles[0].Model @vehicles[0].ReleaseYear
                            </div>
                            <div class="menu">
                                @foreach (var element in vehicles)
                                {
                                    <div class="item" data-value="@element.Id" onclick="changeData(@element.Id)">
                                        @element.Brand @element.Model @element.ReleaseYear
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
