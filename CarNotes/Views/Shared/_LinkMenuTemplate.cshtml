@model List<CarNotes.Models.LinkMenuModel>
@{
    Layout = null;
}

<style>
    .link {
        border-radius: 15px;
        padding: 15px 30px;
        position: relative;
        text-decoration: none;
        color: floralwhite;
        display:inline-block;
    }
</style>
<div>
    @foreach (CarNotes.Models.LinkMenuModel l in Model)
    {
        <a href="@Url.Content(l.MethodLink)" class="link" style="background-color:@l.Color">@l.NameLink</a>
    }
</div>