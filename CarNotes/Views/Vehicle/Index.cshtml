@model List<CarNotes.Models.VehicleModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @if (Model.Count > 0)
        {
            <table>
                <tr>
                    <th>Марка</th>
                    <th>Модель</th>
                    <th>Год выхода</th>
                    <th>Цвет</th>
                    <th>Кузов</th>
                </tr>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>@element.Brand</td>
                        <td>@element.Model</td>
                        <td>@element.ReleaseYear</td>
                        <td>@element.Color</td>
                        <td>@element.Body</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>У вас пока не добавлено ни одного транспортного средства.</p>
        }
    </div>
</body>
</html>
