@using CarNotes.Classes
@model List<CarNotes.Models.VehicleModel>
@{
    Layout = "../Shared/_TableTemplate.cshtml";
}
@*<input type="button" value="Добавить новое транспортное средство" class="button" onclick="up()"/>*@
<div class="ui mini modal" id="AddVehicle">@Html.Partial("Add", new CarNotes.CnDb.Vehicle())</div>
<div>
    @if (Model.Count > 0)
    {
        <table class="ui selectable @Html.Raw(new LinkMenuHelper().getColor(ViewBag.Name)) unstackable table ">
            <caption>@ViewBag.Name</caption>
            <thead>
                <tr>
                    <th>Марка</th>
                    <th>Модель</th>
                    <th>Год выхода</th>
                    <th>Цвет</th>
                    <th>Кузов</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>@element.Brand</td>
                        <td>@element.Model</td>
                        <td>@element.ReleaseYear</td>
                        <td>@element.Color</td>
                        <td>@element.Body</td>
                        <td class="right aligned"><input type="button" class="ui icon tiny @Html.Raw(new LinkMenuHelper().getColor(ViewBag.Name)) basic button" value=&#10008 onclick="deleteVehicle(@element.Id)" /></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div style="text-align: center">
            <br />
            <i class="massive icons">
                <i class="big brown dont icon"></i>
                <i class="truck monster icon"></i>
            </i>
            <br />
            <br />
            <h3>У вас не добавлено ни одного<br /> транспортного средства.</h3>
        </div>
    }
</div>