@model List<CarNotes.Models.VehicleModel>
@{
    Layout = "../Shared/_BasicTemplate.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Styles/Main.css">
    <style>
        /*всплывающая форма создания события*/
        .Add {
            position: absolute;
            display: none;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .button {
            background-color: darkkhaki;
        }
        tr:hover td {
            background-color: darkkhaki;
            opacity: 0.65;
        }
    </style>
    <script>
        function up() {
            elem = document.getElementsByClassName('Add');
            elem[0].style.display = "inline-block";
        }
    </script>
    <script src="@Url.Content("~/Content/Main.js")"></script>
</head>
<body>
    <input type="button" value="Добавить новое транспортное средство" class="button" onclick="up()"/>
    <div class="Add">@Html.Partial("Add", new CarNotes.CnDb.Vehicle())</div>
    <div>
        @if (Model.Count > 0)
        {
            <table>
                <tr>
                    <th>Марка</th>
                    <th>Модель</th>
                    <th>Год выхода</th>
                    <th>Цвет</th>
                    <th>Кузов</th>
                </tr>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>@element.Brand</td>
                        <td>@element.Model</td>
                        <td>@element.ReleaseYear</td>
                        <td>@element.Color</td>
                        <td>@element.Body</td>
                        <td onclick="deleteVehicle(@element.Id)">&#10008</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>У вас не добавлено ни одного транспортного средства.</p>
        }
    </div>
</body>
</html>
